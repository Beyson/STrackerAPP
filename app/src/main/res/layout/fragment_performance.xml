<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/SwipeRefreshLayoutPerformance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTituloDes1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/procesosregistrados"
                                android:textAllCaps="true"
                                android:textColor="@color/PrimaryText"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/DividerColor" />

                            <TextView
                                android:id="@+id/textViewPorcentajeRegistrados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/PrimaryText"
                                android:textSize="36sp" />

                            <ImageView
                                android:layout_width="@dimen/icon_cardsize"
                                android:layout_height="@dimen/icon_cardsize"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/ic_chart"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvDesc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/procesosregistrados"
                                android:textColor="@color/SecondayText" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTituloDes3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Eficiencia"
                                android:textAllCaps="true"
                                android:textColor="@color/PrimaryText"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/DividerColor" />

                            <TextView
                                android:id="@+id/textViewPorcentajeEficiencia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:text="0%"
                                android:textColor="@color/PrimaryText"
                                android:textSize="36sp" />

                            <ImageView
                                android:layout_width="@dimen/icon_cardsize"
                                android:layout_height="@dimen/icon_cardsize"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/ic_equalizer"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvDescDesempeÃ±o3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/Eficiencia"
                                android:textColor="@color/SecondayText" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:baselineAligned="false"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTituloDes5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/procesosAtrasado"
                                android:textAllCaps="true"
                                android:textColor="@color/PrimaryText"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/DividerColor" />

                            <TextView
                                android:id="@+id/textViewPorcentajeAtrasados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/PrimaryText"
                                android:textSize="48dp" />

                            <ImageView
                                android:layout_width="@dimen/icon_cardsize"
                                android:layout_height="@dimen/icon_cardsize"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/ic_pie_chart"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvDesc5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/procesosAtrasado"
                                android:textColor="@color/SecondayText" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:baselineAligned="false"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTituloDes2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/procesosTerminados"
                                android:textAllCaps="true"
                                android:textColor="@color/PrimaryText"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/DividerColor" />

                            <TextView
                                android:id="@+id/textViewPorcentajeTerminados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/PrimaryText"
                                android:textSize="48dp" />

                            <ImageView
                                android:layout_width="@dimen/icon_cardsize"
                                android:layout_height="@dimen/icon_cardsize"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/ic_pie_chart"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvDesc2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/procesosTerminados"
                                android:textColor="@color/SecondayText" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTituloDes4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/procesosTerminadosATiempo"
                                android:textAllCaps="true"
                                android:textColor="@color/PrimaryText"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/DividerColor" />

                            <TextView
                                android:id="@+id/textViewPorcentajeTiempo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="@color/PrimaryText"
                                android:textSize="36sp" />

                            <ImageView
                                android:layout_width="@dimen/icon_cardsize"
                                android:layout_height="@dimen/icon_cardsize"
                                android:layout_gravity="center_horizontal"
                                app:srcCompat="@drawable/ic_chart"
                                android:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tvDescDesempeÃ±o4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/procesosTerminadosATiempo"
                                android:textColor="@color/SecondayText" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>